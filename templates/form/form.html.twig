{% block captcha_row %}
<div class="form-group">
    <puzzle-captcha
        {% for attrName, attrValue in attr %}
            {{ (attrName ~ "=" ~ attrValue) |raw(html) }}
        {% endfor %}
    >
        {{ form_widget(form.challenge, {value: challenge}) }}
        {{ form_widget(form.answer) }}

    </puzzle-captcha>

    {{ form_help(form) }}
    {{ form_errors(form) }}
</div>
{% endblock %}